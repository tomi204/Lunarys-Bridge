{
  "name": "@lunarys/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Workspace root for Lunarys bridge (frontend, contracts, node, FHE tooling)",
  "license": "BSD-3-Clause-Clear",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "frontend",
    "fhevm-react",
    "evm-contracts",
    "node",
    "relayer"
  ],
  "scripts": {
    "dev": "npm run dev --workspace frontend",
    "dev:node": "npm run dev --workspace node",
    "dev:contracts": "npm run dev --workspace evm-contracts",
    "dev:relayer": "npm run dev --workspace relayer",
    "build": "npm run build --workspaces --if-present --include-workspace-root=false",
    "build:frontend": "npm run build --workspace frontend",
    "build:node": "npm run build --workspace node",
    "build:contracts": "npm run compile --workspace evm-contracts",
    "build:relayer": "npm run build --workspace relayer",
    "lint": "npm run lint --workspaces --if-present --include-workspace-root=false",
    "clean": "npm run clean --workspaces --if-present --include-workspace-root=false",
    "type-check": "npm run type-check --workspaces --if-present --include-workspace-root=false"
  }
}
