# --- Token mapping: EVM token (bytes32) -> SPL mint + escrow (vault owned by PDA) ---
TOKEN_MAP_JSON=[
  {
    "type": "spl",
    "origin": "0x<USDC_EVM_ADDRESS_LEFT_PADDED_TO_32_BYTES>",
    "mint": "<USDC_SOLANA_MINT_BASE58>",
    "escrow": "<USDC_VAULT_TOKEN_ACCOUNT_BASE58>"
  },
  {
    "type": "spl",
    "origin": "0x<EUROC_EVM_ADDRESS_LEFT_PADDED_TO_32_BYTES>",
    "mint": "<EUROC_SOLANA_MINT_BASE58>",
    "escrow": "<EUROC_VAULT_TOKEN_ACCOUNT_BASE58>"
  }
]










